{
    "name": "danger-action",
    "version": "1.0.0",
    "description": "Danger action for GitHub actions",
    "main": "lib/main.js",
    "scripts": {
        "build": "tsc",
        "pack": "ncc build",
        "test": "jest",
        "lint": "eslint src/**/*.ts",
        "lint:report": "eslint --output-file eslint_report.json --format json src/**/*.ts"
    },
    "keywords": [],
    "author": "",
    "license": "MIT",
    "dependencies": {
        "@actions/core": "^1.11.1",
        "@actions/exec": "^1.1.1",
        "@actions/io": "^1.1.3"
    },
    "devDependencies": {
        "@types/jest": "^30.0.0",
        "@types/node": "^20.19.0",
        "@typescript-eslint/eslint-plugin": "^8.40.0",
        "@typescript-eslint/parser": "^8.41.0",
        "@vercel/ncc": "^0.38.3",
        "eslint": "^9.34.0",
        "eslint-config-prettier": "^10.1.8",
        "eslint-plugin-prettier": "^5.5.4",
        "jest": "^30.1.1",
        "jest-circus": "^29.7.0",
        "prettier": "^3.6.2",
        "ts-jest": "^29.4.1",
        "typescript": "^5.9.2"
    },
    "jest": {
        "clearMocks": true,
        "moduleFileExtensions": [
            "js",
            "ts"
        ],
        "testEnvironment": "node",
        "testMatch": [
            "**/*.test.ts"
        ],
        "testRunner": "jest-circus/runner",
        "transform": {
            "^.+\\.ts$": "ts-jest"
        },
        "verbose": true
    }
}
