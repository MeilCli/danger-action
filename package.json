{
    "name": "danger-action",
    "version": "1.0.0",
    "description": "Danger action for GitHub actions",
    "main": "lib/main.js",
    "scripts": {
        "build": "tsc",
        "pack": "ncc build",
        "test": "jest",
        "lint": "eslint src/**/*.ts",
        "lint:report": "eslint --output-file eslint_report.json --format json src/**/*.ts"
    },
    "keywords": [],
    "author": "",
    "license": "MIT",
    "dependencies": {
        "@actions/core": "^1.10.0",
        "@actions/exec": "^1.1.1",
        "@actions/io": "^1.1.3"
    },
    "devDependencies": {
        "@types/jest": "^29.5.1",
        "@types/node": "^18.16.2",
        "@typescript-eslint/eslint-plugin": "^5.59.2",
        "@typescript-eslint/parser": "^5.59.2",
        "@vercel/ncc": "^0.36.1",
        "eslint": "^8.39.0",
        "eslint-config-prettier": "^8.8.0",
        "eslint-plugin-prettier": "^4.2.1",
        "jest": "^29.5.0",
        "jest-circus": "^29.4.3",
        "prettier": "^2.8.8",
        "ts-jest": "^29.1.0",
        "typescript": "^5.0.4"
    },
    "jest": {
        "clearMocks": true,
        "moduleFileExtensions": [
            "js",
            "ts"
        ],
        "testEnvironment": "node",
        "testMatch": [
            "**/*.test.ts"
        ],
        "testRunner": "jest-circus/runner",
        "transform": {
            "^.+\\.ts$": "ts-jest"
        },
        "verbose": true
    }
}
